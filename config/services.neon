services:
    routerFactory: Nepttune\RouterFactory
    router: @routerFactory::createSubdomainRouter

    - Nepttune\Model\ErrorLogModel
    - Nepttune\Model\CronLogModel
    - Nepttune\Model\PushNotificationModel(%vapid%)

    - Nepttune\Component\ISitemapFactory
    assetLoaderFactory:
        implement: Nepttune\Component\IAssetLoaderFactory
        arguments:
            - %vapid.publicKey%
    robotsFactory:
        implement: Nepttune\Component\IRobotsFactory
        arguments:
            - '%robots%'
    securityFactory:
        implement: Nepttune\Component\ISecurityFactory
        arguments:
          - '%security%'

decorator:
    Nepttune\Presenter\BasePresenter:
        setup:
            - injectParameters(%meta%, %dest%)
    Nepttune\TI\ITranslator:
        setup:
            - injectTranslator
    Nepttune\RouterFactory:
        setup:
            - injectConfig(%router%)

latte:
    macros:
        - Nepttune\Latte\IconMacro::install

translation:
    default: en
    whitelist: [en, cs, de, es, fr, ru]
    resolvers:
        session: off
        request: on
        header: off
    dirs:
        - '%appDir%/lang'
        - '%appDir%/../vendor/nepttune/nepttune/lang'
