{layout @core.latte}

{block bodyContent}

<div class="white-popup">
    <div id="flasharea">
        {snippet flash}
            {foreach $flashes as $flash}
                <div class="flash {$flash->type}">{$flash->message}</div>
            {/foreach}
        {/snippet}
    </div>
    <header>
        <h1>{include title}</h1>
    </header>

    {include content}
</div>
