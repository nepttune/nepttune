<!DOCTYPE html>
{spaceless}
<html lang="{$presenter->translator->getLocale()}">
    <head>
        <title>{include #title} | {$meta['name']}</title>
        <base href="{$baseUrl}" />
        <meta charset="UTF-8" />
        <meta name="robots" content="index, follow" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
        <meta name="description" content="{$meta['description']}" />
        <meta name="keywords" content="{$meta['keywords']}" />
        <meta name="author" content="{$meta['author']}" />
        <link rel="icon" type="image/x-icon" href="{$meta['faviconIco']}" sizes="48x48" />
        <link rel="icon" type="image/png" href="{$meta['faviconPng']}" sizes="48x48" />
        <link rel="apple-touch-icon" sizes="48x48" href="{$meta['faviconPng']}">

        {control assetLoader:style}
    </head>
    {ifset #bodyTag}
        {include #bodyTag}
    {else}
        <body>
    {/ifset}
        {ifset #bodyContent}
            {include #bodyContent}
        {else}
            {include #content}
        {/ifset}
        
        {control assetLoader:styleComponent}
        {control assetLoader:script}
    </body>
</html>
{/spaceless}
